public static int MaxIndex(double[] array)
{
    if (array == null || array.Length == 0)
    {
        return -1;
    }
    
    double max = array[0];
    int index = 0;
    
    for (int i = 1; i < array.Length; i++)
    {
        if (array[i] > max)
        {
            max = array[i];
            index = i;
        }
    }
    
    return index;
}
